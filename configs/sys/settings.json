{
    // ** telemetry ** //
    "telemetry.telemetryLevel": "off",
    "update.mode": "none",

    // ** editor ** //
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.autoClosingBrackets": "never",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 2,
    "editor.fontFamily": "'Input Mono Condensed', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.guides.indentation": false,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "trailing",
    "editor.smoothScrolling": true,
    "editor.tabSize": 4,
    "search.defaultViewMode":"tree",
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.smoothScrolling": true,
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "never",
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "custom",
    "workbench.activityBar.location": "top",

    // ** plugins ** //
    // https://marketplace.visualstudio.com/items?itemName=ms-dotnettools.csdevkit
    // https://marketplace.visualstudio.com/items?itemName=GitHub.copilot
    // https://marketplace.visualstudio.com/items?itemName=chadalen.vscode-jetbrains-icon-theme
    // https://marketplace.visualstudio.com/items?itemName=ms-toolsai.jupyter
    // https://marketplace.visualstudio.com/items?itemName=ms-dotnettools.dotnet-interactive-vscode
    // https://marketplace.visualstudio.com/items?itemName=vscodevim.vim

    // Icons
    "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",

    // Polygot 
    "notebook.lineNumbers": "on",
    "notebook.editorOptionsCustomizations": {
        "editor.tabSize": 2,
        "editor.indentSize": 2,
        "editor.insertSpaces": true
    },

    // Copilot
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },

    // Vim
   "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.smartRelativeLine": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["leader", "t"],
            "commands": [
              "notebook.execute"
            ]
        },
        {
          "before": ["g", "q"],
          "commands": [
              "editor.action.showDefinitionPreviewHover"
          ]
        },
        {
            "before": ["g", "l"],
            "commands": [
                "workbench.files.action.showActiveFileInExplorer"
            ] 
        },
        {
            "before": ["<C-w>"],
            "commands": [
                "workbench.action.closeActiveEditor"
            ] 
        },
    ],

    // dotnet
    "dotnetAcquisitionExtension.enableTelemetry": false,
    "omnisharp.enableDecompilationSupport": true,
    "dotnetAcquisitionExtension.existingDotnetPath": [
        "!DOTNET PATH!"
    ],
    "csharp.inlayHints.enableInlayHintsForTypes": false,
    "csharp.inlayHints.enableInlayHintsForLambdaParameterTypes": false,
    "csharp.inlayHints.enableInlayHintsForImplicitVariableTypes": false,
    "dotnet.inlayHints.enableInlayHintsForIndexerParameters": false,
    "csharp.inlayHints.enableInlayHintsForImplicitObjectCreation": false,
    "dotnet.inlayHints.enableInlayHintsForLiteralParameters": false,
    "dotnet.inlayHints.enableInlayHintsForObjectCreationParameters": false,
    "dotnet.inlayHints.enableInlayHintsForOtherParameters": false,
    "dotnet.inlayHints.enableInlayHintsForParameters": false,


    // ** theme ** //
    // custom hardcoded 'Contenssa' theme
    // https://github.com/fatcheetah/rand/blob/master/configs/theme/vscode/c.json
    "editor.semanticHighlighting.enabled": true,
	"workbench.colorCustomizations": {
		"activityBarBadge.background": "#007acc",
		"editor.background": "#1e1e1e",
		"editor.foreground": "#d4d4d4",
		"editor.inactiveSelectionBackground": "#3a3d414b",
		"editor.selectionHighlightBackground": "#add6ff26",
		"editorIndentGuide.activeBackground1": "#707070",
		"editorIndentGuide.background1": "#404040",
		"editorBracketHighlight.foreground1": "#dd6e6e",
        "editorBracketHighlight.foreground2": "#ddd26e",
        "editorBracketHighlight.foreground3": "#6edd91",
		"input.placeholderForeground": "#a6a6a6",
		"list.activeSelectionIconForeground": "#ffffff",
		"list.dropBackground": "#383b3d",
		"menu.background": "#252526",
		"menu.border": "#454545",
		"menu.foreground": "#cccccc",
		"menu.separatorBackground": "#454545",
		"ports.iconRunningProcessForeground": "#369432",
		"sideBarSectionHeader.background": "#00000000",
		"sideBarSectionHeader.border": "#cccccc33",
		"sideBarTitle.foreground": "#bbbbbb",
		"statusBarItem.remoteBackground": "#16825d",
		"statusBarItem.remoteForeground": "#ffffff",
		"tab.lastPinnedBorder": "#cccccc33",
		"terminal.inactiveSelectionBackground": "#3a3d41",
	},
